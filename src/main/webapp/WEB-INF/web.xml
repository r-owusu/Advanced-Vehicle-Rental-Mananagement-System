<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Advanced Vehicle Rental Management System</display-name>
    <description>
        A comprehensive web-based vehicle rental management system
    </description>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Vehicle Management Servlet -->
    <servlet>
        <servlet-name>VehicleServlet</servlet-name>
        <servlet-class>com.rowusu.vehiclerental.web.VehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VehicleServlet</servlet-name>
        <url-pattern>/vehicles</url-pattern>
    </servlet-mapping>

    <!-- Customer Management Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.rowusu.vehiclerental.web.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>

    <!-- Rental Management Servlet -->
    <servlet>
        <servlet-name>RentalServlet</servlet-name>
        <servlet-class>com.rowusu.vehiclerental.web.RentalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RentalServlet</servlet-name>
        <url-pattern>/rentals</url-pattern>
    </servlet-mapping>

    <!-- Reports Servlet -->
    <servlet>
        <servlet-name>ReportsServlet</servlet-name>
        <servlet-class>com.rowusu.vehiclerental.web.ReportsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportsServlet</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>